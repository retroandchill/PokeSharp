---
Language: Cpp
BasedOnStyle: Microsoft
ColumnLimit: 120
MaxEmptyLinesToKeep: 1
TabWidth: 4
IndentWidth: 4
SortIncludes: CaseInsensitive
AllowShortFunctionsOnASingleLine: None
NamespaceIndentation: All
IncludeBlocks: Regroup
IncludeCategories:
    - Regex: 'CoreMinimal.h'
      Priority: 0
      SortPriority: 0
      CaseSensitive: false
    - Regex:           '.*.generated.h'
      Priority:        1000
      SortPriority:    1000
    - Regex:           '.*'
      Priority:        0
      SortPriority:    1
BreakBeforeConceptDeclarations: true
AlwaysBreakTemplateDeclarations : Yes
ForEachMacros: 
    - TRIPLE_LOOP
Macros:
    - check(x)={assert(x);}
    - verify(x)=x;
    - SLATE_ATTRIBUTE(AttrType, AttrName) AttrType AttrName;
    - SLATE_ARGUMENT(AttrType, AttrName) AttrType AttrName;
    - JSON_FIELD_REQUIRED(x)=x;
MacroBlockBegin: "SLATE_BEGIN_ARGS|JSON_OBJECT_SCHEMA_BEGIN|JSON_VARIANT_BEGIN"
MacroBlockEnd: "SLATE_END_ARGS()|JSON_OBJECT_SCHEMA_END|JSON_VARIANT_END"

BreakBeforeBraces: Allman
BinPackParameters: false
BinPackArguments: false
AllowShortLambdasOnASingleLine: Inline
AllowAllArgumentsOnNextLine: false
AllowAllParametersOfDeclarationOnNextLine: false

UseTab: Never
IndentCaseLabels: true
IndentCaseBlocks: true
IndentGotoLabels: false

SpaceBeforeParens: ControlStatements
SpaceBeforeRangeBasedForLoopColon: true
SpaceBeforeCtorInitializerColon: true
SpaceInEmptyParentheses: false
SpacesInParentheses: false
SpacesInSquareBrackets: false
SpacesInAngles: false
SpaceAroundPointerQualifiers: Default